<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgbg"
    android:padding="16dp"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="136dp"
        android:textStyle="bold"
        android:text="REGISTER"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editnamaemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:hint="Nama"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editemailaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editnamaemail"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edittassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editemailaddress"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/editconfirpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittassword"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editconfirpassword"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="REGISTER" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegister"
        android:layout_marginTop="20dp"
        android:layout_marginStart="90dp"
        android:text="@string/punya_akun"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegister"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textView6"
        android:textColor="@color/teal_700"
        android:text="Login"
        android:textSize="20sp" />

</RelativeLayout>